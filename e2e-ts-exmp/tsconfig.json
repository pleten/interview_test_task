{
  "compilerOptions": {
    "target": "es2015",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "baseUrl": ".",
    "types": [
      "node",
      "./typings/steps"
    ]
  },
  "include": [
    "../pages/*",
    "../fixtures/*",
    "../steps/*"
  ]
}